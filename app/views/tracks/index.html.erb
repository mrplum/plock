<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"> Track </h1>
</div>

<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="card shadow mb-4 border-bottom-primary">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"> <i class="fa fa-fw fa-tasks"></i> My Tracks </h6>
      </div>
      <div class="card-body">
        <% if @tracks.present? %>
          <table class="table table-bordered table-hover" id="dataTable">
            <thead>
              <tr class="text-center">
                <th>Name</th>
                <th>Project Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <% @tracks.each do |track| %>
              <tr class="text-center">
                <td><%= track.name %></td>
                <td><%= track.project&.name %></td>
                <td><%= track.description %></td>
                <td>
                  <% if track.in_progress?%>
                    <i class="fa fa-circle mr-3 text-warning fa-fw"></i>
                  <% elsif track.unstarted?%>
                    <i class="fa fa-circle mr-3 text-danger fa-fw"></i>
                  <% else %>
                    <i class="fa fa-check mr-3 text-success fa-fw"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to track, class: "btn btn-sm btn-warning shadow-sm", data: { turbolinks: false } do %>
                    <i class="fa fa-eye fa-sm text-white-50"></i>
                  <%end%>
                </td>
              </tr>
            <% end %>
          </table>
          <div class="mt-4 text-center small">
            <span class="mr-2">
              <i class="fas fa-check text-success"></i> finished
            </span>
            <span class="mr-2">
              <i class="fas fa-circle text-warning"></i> in progress
            </span>
            <span class="mr-2">
              <i class="fas fa-circle text-danger"></i> unstarted
            </span>
          </div>
          <br/>
        <% else %>
          <div class="mt-4 text-center">
            <span class="text-danger font-weight-bold">
              You have not assigned tracks yet
              <i class="fa fa-fw fa-calendar-times text-danger"></i>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

