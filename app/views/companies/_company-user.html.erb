<div id='company-user' class='company-user hidden'>

    <% if users.empty? %>
      <p> Not users available </p>
    <% else %>
        <table class = "table table-hover table-dark" style="width: 80%; margin-left: 10%;">
          <thead>
            <tr class="text-center">
              <th> Name </th>
              <th> Email </th>
              <th> Last sign in</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% users.each do |user| %>
            <tr class="text-center">
              <td><%= "#{user.name} #{user.lastname}" %> &nbsp&nbsp </td>
              <td><%= user.email %>&nbsp</td>
              <td><%= user.last_sign_in_at %> &nbsp </td>
            </tr>
          <% end %>
        </table>
    <% end %>
    
    <div class="company-button-addUser">
        <%= link_to company_subscribe_user_path(@company), class: "btn btn-new-team login-btn btn-block" do %>
            <i class="fa fa-user-plus mr-3 text-light fa-fw"></i>Add user
        <% end %> 
    </div>

</div>