<%= form_tag company_send_report_path(company), method: 'post', id: 'urlSendEmail'  do %>
  <div class="modal fade" id="sendEmail" tabindex="-1" role="dialog" aria-labelledby="sendEmailModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="sendEmailModalLabel"> <%= t('pdf.insert_email') %> </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= label_tag(:email, t('email', :class => "text-primary")) %>
            <%= text_field_tag :email, company.email, class: 'form-control'  %>
          </div>

        <div class="modal-footer">
          <div class="form-group">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"> <%= t('cancel') %> </button>
            <%= submit_tag(t('pdf.send'), :class => "btn btn-primary") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
