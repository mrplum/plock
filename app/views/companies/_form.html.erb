<div class="col-lg-4">
  <img class="img-fluid px-5 px-sm-4 mt-3 mb-4" style="width: 25rem;" src="/images/company.svg" alt="">
</div>
<div class="col-lg-6">
  <%= form_with(model: company, local: true) do |form| %>

    <div class="form-group">
      <%= form.label 'Name:', class: "text-primary" %><br/>
      <%= form.text_field :name, class: "form-control", placeholder: 'Name' %>
    </div>

    <div class="form-group">
      <%= form.label 'Description:', class: "text-primary" %><br/>
      <%= form.text_field :description, class: "form-control", placeholder: 'Description' %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  <div id="user-add"> </div>
</div>