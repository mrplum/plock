<h1 class="h3 mb-4 text-gray-800"> <%= t 'company_settings' %> </h1>
<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="card shadow mb-4 border-bottom-primary">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"> <%= t 'add_employee_to' %> <%= @company.name %> </h6>
      </div>
      <div class="card-body">
        <div  class="row justify-content-center">
          <div class="col-lg-4">
            <img class="img-fluid px-5 px-sm-4 mt-3 mb-4" style="width: 25rem;" src="/images/add_user_company.svg" alt="">
          </div>
          <div class="col-lg-6">
            <%= form_with(model: @user, local: true, url: company_send_email_path, method: 'get') do |form| %>
              <div class="form-group">
                <%= form.label t('email'), class: "text-primary" %>
                <%= form.text_field :email, class: "form-control", placeholder: 'Email' %>
              </div>

              <div class="form-group">
                <%= form.submit t('add_user'), class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
            <div id="user-add"> </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>