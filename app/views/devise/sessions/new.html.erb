<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>   
    <h2 class="text-center">Log in</h2>

    <div class="form-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
          <%= f.text_field :email, input_html: {class: 'form-control'}, class: "form-control",placeholder: 'Email' %>
      </div>
    </div>

    <div class="form-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true" ></i></span>
        <%= f.password_field :password, input_html: {class: 'form-control'}, class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>

    <div class="form-group  mb-3">
      <%= f.submit "Sign in", class: "btn btn-primaryy login-btn btn-block" %>
    </div>

    <div class="clearfix">   
      <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
        <% if devise_mapping.rememberable? %>
          <%= f.label :remember_me, label_html: { class: "pull-left checkbox-inline" } %>
          <%= f.input :remember_me, input_html: { type: "checkbox" } %>
        <% end %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), html_options = {class: "pull-right2"} %><br />
    </div>

  <% end %>
</div>
