<div class="row">
  <div class="col-lg-6 d-none d-lg-block">
    <img class="img-fluid px-5 px-sm-4 mt-3 mb-4" style="width: 25rem;" src="/images/forgot_password.svg" alt="rss feed" />
  </div>
  <div class="col-lg-6">
    <div class="p-5">
      <div class="text-center">
        <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
        <p class="mb-4">We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!</p>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "form-control form-control-user" %>
        </div>
        <div class="form-group">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-user btn-block" %>
        </div>

        <div class="clearfix">
          <div class="text-center">
            <%= link_to new_session_path(resource_name), html_options = {class: "float-right"} do %>
              <span> Already have an account? Login! </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
