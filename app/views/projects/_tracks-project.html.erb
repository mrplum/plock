<div id='track-project' class='track-project hidden'>

  <div class="user-card-container">
    <% if @tracks.empty? %>
      <p> Not tracks available </p>
    <% else %> 
      <% @tracks.each do |track| %>
        <div class="card-project">
          <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header" style="text-align: center;"> <%= track.name %> </div>
            <div class="card-body">
              <h5 class="card-title"> description </h5>
              <p class="card-text"> <%= track.description %> </p>
              <%= link_to '<i class="fa fa-eye text-light"></i>'.html_safe, track, class: "btn btn-light navbar-btn" %>
              <%= link_to '<i class="fa fa-trash text-light"></i>'.html_safe, track, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-light navbar-btn" %>
            </div>  
          </div>
        </div>
      <%end%>
    <% end %>

    <div class="card-teams">
      <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header" style="text-align: center;"> Create new track</div>
        <div class="card-body">
          <p class="card-text"></p>
          <%= link_to '<i class="fa fa-plus text-light"></i>'.html_safe, new_project_track_path(@project), class: "btn btn-light navbar-btn"%>
          <p class="card-text"></p>
        </div>  
      </div>
    </div>

  </div>

</div>





