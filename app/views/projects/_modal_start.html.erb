<!-- Modal start -->
<%= form_with(model: [track, interval = Interval.new], local: true) do |form| %>
  <div class="modal fade" id="<%="startModal#{track.id}"%>" tabindex="-1" role="dialog" aria-labelledby="startModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="startModalLabel"> <%= track.name %> </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"></span>
                <%= form.text_field :description, class: "form-control", placeholder: t('description_interval') %>
              </div>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"> <%= t('cancel') %> </button>
          <div class="actions">
            <%= form.hidden_field 'start_track', value: true %>
            <%= form.hidden_field 'modal', value: true %>
            <%= form.button class: 'btn btn-success shadow-sm', data: { turbolinks: false } do %>
              <span> <%= t('started') %> </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>