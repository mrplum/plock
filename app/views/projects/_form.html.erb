<div class="col-lg-6">
  <%= form_with(model: project, local: true) do |form| %>

    <div class="form-group">
      <%= form.label 'Name:', class: "text-primary" %><br/>
      <%= form.text_field :name, class: "form-control", placeholder: 'Name' %>
    </div>

    <div class="form-group">
      <%= form.label 'Description:', class: "text-primary" %><br/>
      <%= form.text_field :description, class: "form-control", placeholder: 'Description' %>
    </div>

    <div class="form-group">
      <%= form.label 'Cost:', class: "text-primary" %><br/>
      <%= form.text_field :cost, class: "form-control", placeholder: 'Cost' %>
    </div>

    <div class="form-group">
      <%= form.label 'Start at:', class: "text-primary" %><br/>
      <%= form.date_select( :start_at, {}, {:class => ''}) %>
    </div>

    <div class="form-group">
      <%= form.label 'Selected Team:', class: "text-primary" %><br/>
      <%= form.select( :team_id, options_from_collection_for_select(
        current_user.teams,"id", "name"),
        {}, { :class => 'form-control', include_blank: true,  multiple: false })%>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
<div class="col-lg-4 d-flex flex-row align-items-center justify-content-between">
  <img class="img-fluid px-6 px-sm-12 mt-4 mb-4" style="width: 25rem;" src="/images/projects.svg" alt="">
</div>