  <p id="notice"><%= notice %></p>

  <h1> User Profile </h1>

  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Lastname:</strong>
    <%= @user.lastname %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <h1> Working in </h1>
    <% if @projects.empty? %>
        <p> Not working in any project </p>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Repository</th>
            <th>Cost</th>
            <th>Start at</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @projects.each do |project| %>
          <tr>
              <td><%= project.name %></td>
              <td><%= project.repository %></td>
              <td><%= project.cost %></td>
              <td><%= project.start_at %></td>
              <td><%= link_to 'Show', project %></td>
          </tr>
        <%end%>
      </table>
  <% end %>
  
  <div id="graph-d3-user"> </div>
