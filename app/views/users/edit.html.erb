<h1 class="h3 mb-4 text-gray-800"> Profile </h1>
<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="card shadow mb-4 border-bottom-primary">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit Profile</h6>
      </div>
      <div class="card-body">
        <div class="row justify-content-center">

            <div class="col-lg-4">
              <%= form_with(model: @user, local: true, id: 'user_edit_form') do |form| %>
              <div class='form-group'>
                <% if @user.avatar? %>
                  <%= image_tag(@user.avatar_url, class: "img-responsive", style:"width: 20rem;")%>
                <% else %>
                  <img class="img-fluid px-5 px-sm-4 mt-3 mb-4" style="width: 20rem;" src="/images/user_default.png" alt="">
                <% end %>
                <%= form.file_field :avatar, class: "" %>
              </div>
            </div>

            <div class="col-lg-6">
              <div class="form-group">
                <%= form.label 'Name:', class: "text-primary" %><br/>
                <%= form.text_field :name, class: "form-control", id: 'user_name', placeholder: 'Name' %>
              </div>

              <div class="form-group">
                <%= form.label 'Lastname:', class: "text-primary" %><br/>
                <%= form.text_field :lastname, class: "form-control", id: 'user_lastname', placeholder: 'Lastname'%>
              </div>

              <div class="form-group">
                <%= form.submit 'Update Data',class: "btn btn-primary btn-block" %>
              </div>
              <%= render "devise/shared/error_messages", resource: @user %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="card shadow mb-4 border-bottom-primary">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"> Change Password </h6>
      </div>
      <div class="card-body">
        <div class="row justify-content-center">
          <%= form_with(model: @user, local: true, id: 'user_edit_form') do |form| %>
            <div class="form-group">
              <%= form.label :password, "Password (6 characters minimum):", class: "text-primary" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= form.password_field :password, id: 'user_password', class: "form-control", autofocus: true, autocomplete: "new-password" %>
            </div>
            <div class="form-group">
              <%= form.label :password_confirmation, "Password confirmation:", class: "text-primary" %><br />
              <%= form.password_field :password_confirmation, class: "form-control", id: 'user_confirmation_password', autocomplete: "new-password" %>
            </div>
            <div class="form-group">
              <%= form.submit 'Change Password', class: "btn btn-primary btn-block" %>
            </div>
            <%= render "devise/shared/error_messages", resource: @user %>
            <%= form.hidden_field :reset_password_token %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>