--------------------------------------------------------------------------------------------------------------

curl -X GET "localhost:9200/intervals/_search?pretty" -H 'Content-Type: application/json' -d '{
  "query": {
    "bool": { 
      "filter": [
        { "match": { "user_id": 4 } },
        { "match": { "project_id": 1 } },
        {
          "range": {
            "start_at": {
              "lt": "2020-09-30",
              "gt": "2020-08-01",
              "format": "yyyy-MM-dd"
            }
          }
        }
      ]
    }
  },
  "aggs": {
    "sales_over_time": {
      "date_histogram": {
        "field": "start_at",
        "calendar_interval": "month"
      },
      "aggs": {
        "time_worked": {
          "sum": { "field": "minutes" } 
        }
      }
    }
  }
}'



curl -X GET "localhost:9200/intervals/_search?pretty" -H 'Content-Type: application/json' -d '{
  "query": {
    "bool": {
      "filter": [
        { "match": { "user_id": 4 } },
        { "match": { "project_id": 1 } }
      ],
      "must": [
        {
          "range": {
            "start_at": {
              "lt": "2020-09-30",
              "gt": "2020-08-01",
              "format": "yyyy-MM-dd"
            }
          }
        },
        {
          "range": {
            "end_at": {
              "lt": "2020-09-30",
              "gt": "2020-08-01",
              "format": "yyyy-MM-dd"
            }
          }
        }
      ]
    }
  },
  "aggs": {
    "sales_over_time": {
      "date_histogram": {
        "field": "start_at",
        "calendar_interval": "month"
      },
      "aggs": {
        "time_worked": {
          "sum": { "field": "minutes" } 
        }
      }
    }
  }
}'
